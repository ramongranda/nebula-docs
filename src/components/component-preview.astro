---
// Lightweight preview wrapper used by MDX docs.
// Renders optional `markdoc` and `preview` slots side-by-side.
---
<section class="cmp-preview">
  <div class="cmp-col code">
    <slot name="markdoc" />
  </div>
  <div class="cmp-col render">
    <slot name="preview" />
    <slot />
  </div>
  
</section>

<style>
  .cmp-preview {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    align-items: start;
    margin: 1rem 0 2rem;
  }
  .cmp-col {
    border: 1px solid var(--sl-color-gray-6, #2a2a2a);
    border-radius: 0.5rem;
    padding: 0.75rem;
    background: var(--sl-color-gray-7, #1f1f1f);
  }
  .cmp-col.code {
    overflow: auto;
  }
  @media (max-width: 900px) {
    .cmp-preview { grid-template-columns: 1fr; }
  }
</style>

